{
	"build": {
		"devPath": "../src",
		"distDir": "../src",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "flower",
		"version": "0.2.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"dialog": {
				"all": false,
				"confirm": true
			},
			"app": {
				"all": true
			},
			"window": {
				"all": false,
				"close": true
			},
			"shell": {
				"all": false,
				"execute": true,
				"scope": [
					{
						"name": "start-bridge-server",
						"cmd": "bin\\python\\python.exe",
						"args": [
							"webapp.py"
						]
					},
					{
						"name": "force-stop-bridge-server",
						"cmd": "close.bat"
					}
				]
			},
			"http": {
				"all": false,
				"request": true,
				"scope": [
					"http://127.0.0.1*"
				]
			}
		},
		"windows": [
			{
				"title": "海棠叶",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "nsis",
			"identifier": "com.xueluoanping.flower",
			"publisher": "xueluoanping",
			"shortDescription": "A simple tool to help players enjoy Alchemy Stars.",
			"icon": [
				"icons/Begonia Aroma x 32.png",
				"icons/Begonia Aroma.png",
				"icons/Begonia Aroma.ico"
			],
			"category": "Productivity"
		}
	}
}